# Environment Variables for QLAB Telegram Bot

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_WEBHOOK_URL=https://your-domain.vercel.app/api/telegram

# Authorized Users (Telegram User IDs)
ADMIN_TELEGRAM_ID=your_telegram_user_id
MANAGER_TELEGRAM_ID=manager_telegram_user_id

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o

# Firebase Configuration
FIREBASE_PROJECT_ID=detailflow-8mkmj
FIREBASE_SERVICE_ACCOUNT_BASE64=your_base64_encoded_service_account

# Redis Configuration (for conversation memory)
REDIS_URL=redis://localhost:6379
# Or use Redis Cloud for production
# REDIS_URL=redis://username:password@redis-server:port

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Business Configuration
BUSINESS_NAME=Bosmat Repainting and Detailing Studio
BUSINESS_TIMEZONE=Asia/Jakarta
DAILY_TARGET=2000000
MONTHLY_TARGET=60000000

# Features Toggle
ENABLE_PROACTIVE_NOTIFICATIONS=true
ENABLE_VOICE_PROCESSING=false
ENABLE_IMAGE_RECOGNITION=false
