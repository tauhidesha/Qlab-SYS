rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access to all collections for authenticated users
    match /{colName}/{docId} {
      allow read, write: if request.auth != null;
      
      // Allow access to all subcollections for authenticated users
      match /{subcollection}/{subdocId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Special rules for AI intervention locks - allow server-side access
    match /ai_intervention_locks/{senderNumber} {
      // Allow server-side access (Admin SDK) without authentication
      allow read, write: if true;
    }
  }
}