rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access to all collections for authenticated users
    match /{colName}/{docId} {
      allow read, write: if request.auth != null;
      
      // Allow access to all subcollections for authenticated users
      match /{subcollection}/{subdocId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Special rules for AI intervention locks - allow server-side access
    match /ai_intervention_locks/{senderNumber} {
      // Allow server-side access (Admin SDK) without authentication
      allow read, write: if true;
    }
    
    // Special rules for knowledge base - allow server-side AI access
    match /knowledge_base_entries/{entryId} {
      // Allow server-side access (Admin SDK) for AI tools without authentication
      allow read: if true;
    }
    
    // Special rules for transactions - allow read access for feedback verification
    match /transactions/{transactionId} {
      // Allow read access for feedback verification without authentication
      allow read: if true;
    }
    
    // Special rules for feedback entries - allow public submission
    match /feedbackEntries/{feedbackId} {
      // Allow write access for feedback submission without authentication
      allow write: if true;
    }
    
    // Special rules for AI metrics - allow server-side monitoring
    match /ai_metrics/{metricId} {
      // Allow server-side access (Admin SDK) for AI monitoring without authentication
      allow read, write: if true;
    }
  }
}